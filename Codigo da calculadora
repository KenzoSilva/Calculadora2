<!DOCTYPE html>
<html lang="pt-BR">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Calculadora para descontos</title>
</head>
<body>
    <h1>Calculadora para descontos</h1>
    
    <label for="preco">Preço do Produto (R$): </label>
    <input type="number" id="preco" placeholder="Insira o preço original">
    <br><br>

    <label for="desconto">Porcentagem de Desconto (%): </label>
    <input type="number" id="desconto" placeholder="Insira o desconto">
    <br><br>

    <button onclick="calcularPrecoFinal()">Calcular Preço Final</button>

    <script>
        // Função para calcular o preço final após o desconto
        function calcularPrecoFinal() {
            let preco = Number(document.getElementById('preco').value);
            let desconto = Number(document.getElementById('desconto').value);
            
            if (preco <= 0 || desconto < 0) {
                alert("Por favor, insira valores válidos.");
                return;
            }
            
            let precoFinal = calcularDesconto(preco, desconto);
            mostrarResultado(precoFinal);
        }

        // Função que calcula o valor do desconto
        function calcularDesconto(preco, desconto) {
            return preco - (preco * (desconto / 100));
        }

        // Função para mostrar o resultado ao usuário
        function mostrarResultado(precoFinal) {
            alert("O preço final do produto após o desconto é: R$ " + precoFinal.toFixed(2));
        }
    </script>
</body>
</html>
